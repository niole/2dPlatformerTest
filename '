        bool up = randomNumber > 0.66f;

        // do 3 across
        // do 2 - 4 up
        // do 2 - 4 down
        // do 4 up or 4 down if there is room to do so

        int[,] tiles = new int[mapWidth, mapHeight];
        for (int w = 0; w < tiles.GetUpperBound(0); w++)
        {
            for (int h = 0; h < tiles.GetUpperBound(1); h++)
            {
                // TODO do stuff
            }

        }
    }
}
